bindsym $mod+KP_0 exec echo 'w' > $fifo, workspace $ws0
bindcode $mod+86 exec echo 'w' > $fifo, workspace $ws+

# move focused container to workspace
bindsym $mod+Shift+twosuperior exec echo 'w' > $fifo, move container to workspace $ws0
